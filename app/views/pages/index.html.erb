<div pages-controller class="pages-controller" ng-cloak>
  <div class="pages" ng-repeat="page in pages.items" >
    <div class="schedule-top">
      <div class="schedule-title float-left">{{page.title}}</div>
      <div class="date float-right vertical-middle">{{page.date| date:'medium'}}</div>
    </div>
    <div class="clearfix"></div>
    <div class="description" ng-bind-html="page.text"></div>
  </div>
</div>

<noscript>
  <% @pages.each do |page| %>
    <div class="pages" >
      <div class="schedule-top">
        <div class="schedule-title float-left"><%= page.title %></div>
        <div class="date float-right"><%= page.date %></div>
      </div>
      <div class="clearfix"></div>
      <div class="description"> <%= page.html_data.html_safe%></div>
    </div> 
  <% end%>
</noscript>